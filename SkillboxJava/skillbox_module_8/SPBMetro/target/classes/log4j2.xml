<?xml version="1.0" encoding="UTF-8"?> <configuration status="WARN">

    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="SearchFile" fileName="logs/search_station_without_marker.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-6level %logger{36} - %msg%n"/>
            <Filters>
                <ThresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL" />
            </Filters>
        </File>

        <File name="SearchStation" fileName="logs/search_station.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-6level %logger{36} - %msg%n"/>
            <Filters>
                <MarkerFilter marker = "INPUT_HISTORY" />
            </Filters>
        </File>

        <File name="WrongStation" fileName="logs/wrong_station.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-6level %logger{36} - %msg%n"/>
            <Filters>
                <MarkerFilter marker = "INVALID_STATIONS" />
            </Filters>
        </File>

        <File name="ExceptionLog" fileName="logs/exception.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-6level %logger{36} - %msg%n"/>
            <Filters>
                <MarkerFilter marker = "EXCEPTION" />
            </Filters>
        </File>



        <File name="SearchFile2" fileName="logs/wrong_station_without_marker.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Filters>
                <ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL" />
            </Filters>
        </File>

        <File name="SearchFile3" fileName="logs/exception_without_marker.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
                        <Filters>
                            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY" />
                        </Filters>
        </File>

    </appenders>

    <loggers>
        <root level="all">
            <appender-ref ref="SearchFile" level="info"/>
            <appender-ref ref="SearchFile2" level="warn"/>
            <appender-ref ref="SearchFile3" level = "error"/>
            <appender-ref ref="SearchStation"/>
            <appender-ref ref="ExceptionLog"/>
            <appender-ref ref="WrongStation"/>
        </root>

    </loggers>

</configuration>