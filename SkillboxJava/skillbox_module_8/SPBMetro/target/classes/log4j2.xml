<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="MyFile" fileName="logs/wrong_station.log" immediateFlush="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="MyFile2" fileName="logs/exception.log" immediateFlush="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} %-5level %class {36} %L %M - %msg%xEx%n"/>
        </File>

        <File name="MyFile3" fileName="logs/station.log" immediateFlush="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-3level %logger{36} - %msg%n"/>
        </File>

    </appenders>
    <loggers>

        <root level="info" additivity="false">
            <appender-ref ref="MyFile" level = "info"/>
<!--            <appender-ref ref="MyFile3" level = "info"/>-->
        </root>

        <logger name="exceptionLogger" additivity="false">
            <appender-ref ref="MyFile2" level = "trace"/>
        </logger>

        <logger name="stationLogger" additivity="false">
            <appender-ref ref="MyFile3" level = "info"/>
        </logger>

    </loggers>
</configuration>